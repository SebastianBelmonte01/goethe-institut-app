<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1b1464"
    tools:context=".BookModification">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:id="@+id/rlName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingrese el título:"
                android:textColor="@color/white"
                android:textColorHint="#8c8c8c"

                android:textSize="20dp" />

            <EditText
                android:id="@+id/bookTitle"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:hint="Título"
                android:textColor="@color/white"
                android:textColorHint="#8c8c8c" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlName"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingrese Autor:"
                android:textColor="@color/white"
                android:textColorHint="#8c8c8c"

                android:textSize="20dp" />

            <EditText
                android:id="@+id/bookAuthor"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:hint="Autor"
                android:textColor="@color/white"

                android:textColorHint="#8c8c8c" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlDireccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlLastName"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingrese la cantidad:"
                android:textColor="@color/white"
                android:textColorHint="#8c8c8c"

                android:textSize="20dp" />

            <EditText
                android:id="@+id/bookCantidad"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:hint="Cantidad"
                android:inputType="number"
                android:textColor="@color/white"

                android:textColorHint="#8c8c8c" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rlFechaNacimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlDireccion"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingrese la dirección de la imagen:"
                android:textColor="@color/white"
                android:textColorHint="#8c8c8c"

                android:textSize="20dp" />

            <EditText
                android:id="@+id/bookDireccionImagen"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:hint="nombre.jpg"
                android:textColor="@color/white"
                android:textColorHint="#8c8c8c" />


        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/btnAtras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#a1c815"
            android:layout_marginRight="20dp"
            android:text="Atrás" />

        <Button
            android:id="@+id/btnModificar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#a1c815"
            android:text="Modificar" />




    </LinearLayout>


</RelativeLayout>