<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1b1464"
    tools:context=".StudentRegistration">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/newStudentForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:id="@+id/rlCi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingrese la cédula de identidad:"
                    android:textColor="@color/white"
                    android:textColorHint="#8c8c8c"

                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/ci"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:hint="CI"
                    android:textColor="@color/white"
                    android:textColorHint="#8c8c8c" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlCi"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingrese el nombre:"
                    android:textColor="@color/white"
                    android:textColorHint="#8c8c8c"

                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/nombre"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"

                    android:hint="Nombre"
                    android:textColor="@color/white"
                    android:textColorHint="#8c8c8c" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlName"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingrese el apellido:"
                    android:textColor="@color/white"
                    android:textColorHint="#8c8c8c"

                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/apellido"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:hint="Apellido"
                    android:textColor="@color/white"

                    android:textColorHint="#8c8c8c" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlDireccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlLastName"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingrese la dirección:"
                    android:textColor="@color/white"
                    android:textColorHint="#8c8c8c"

                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/direccion"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:hint="Dirección"
                    android:textColor="@color/white"

                    android:textColorHint="#8c8c8c" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlDireccion"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingrese el teléfono:"
                    android:textColor="@color/white"
                    android:textColorHint="#8c8c8c"

                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/telefono"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:hint="Teléfono"
                    android:textColor="@color/white"

                    android:textColorHint="#8c8c8c" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlFechaNacimiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlTelefono"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingrese la fecha de nacimiento:"
                    android:textColor="@color/white"
                    android:textColorHint="#8c8c8c"

                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/fechaNacimiento"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:inputType="date"
                    android:textColor="@color/white"

                    android:textColorHint="#8c8c8c" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlCursos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlFechaNacimiento"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seleccione un curso:"
                    android:textColor="@color/white"
                    android:textColorHint="#8c8c8c"
                    android:textSize="20dp" />

                <Spinner
                    android:id="@+id/spnCursos"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:background="#a1c815"
                    android:padding="20dp"
                    android:outlineSpotShadowColor="#a1c815"
                    android:outlineAmbientShadowColor="#a1c815"
                    />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/rlButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlCursos"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                >
                <Button
                    android:id="@+id/btnAtras"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:backgroundTint="#a1c815"
                    android:layout_marginRight="20dp"
                    android:text="Atás" />
                <Button
                    android:id="@+id/btnEnviar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:backgroundTint="#a1c815"
                    android:text="Enviar" />

            </LinearLayout>





        </RelativeLayout>





    </LinearLayout>

</ScrollView>